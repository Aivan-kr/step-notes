<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <%- include('components/head') %>
    <title>noteList</title>
</head>
<body>
<!--HEADER-->
<header class="bg-dark p-3 d-flex justify-content-between">
    <h3 class="text-light">note <span class="badge badge-secondary text-uppercase">List</span></h3>
    <a href="/notes" class="btn btn-primary">New note</a>
</header>
<!--NOTE-->
<div class="container">

    <% objFromDb.forEach(el => { %>
    <% if (el.type === 'note') { %>

    <div class="card text-white bg-dark mt-3 note-targ" id="note-list" style="max-width: 18rem;">
<!--         <div class="card-header text-right" data-id="<%= el.id %>"><button type="button" class="btn btn-danger">X</button></div>
 -->        <div class="card-body" data-id="<%= el.id%>">
            <h5 class="card-title" data-id="<%= el.id %>"><%= el.title %></h5>
            <p class="card-text" data-id="<%= el.id %>"><%= el.text %></p>
        </div>
    </div>
<!--TO-DO LIST-->
    <% } else { %>

            <div class="card text-white bg-dark mt-3" onchange="listStatus()" style="max-width: 18rem;">
                <div class="card-body" id="card-body">
                    <h5 class="text-light">TO-DO <span class="badge badge-secondary text-uppercase">List</span></h5>
                    <h5><%= el.title %></h5>

                    <div class="unchecked">
                    <% el.items.unchecked.forEach((item, index) => { %>
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" class="custom-control-input" id="c<%= index %>">
                            <label class="custom-control-label" for="c<%= index %>"><%= item %></label>
                        </div>
                    <% }) %>
                    </div>

                    <div class="checked">
                    <% el.items.checked.forEach((item, index) => { %>
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" checked="checked" class="custom-control-input" id="u<%= index %>">
                            <label class="custom-control-label" for="u<%= index %>"><%= item %></label>
                        </div>
                    <% }) %>
                    </div>

                </div>
            </div>
    <% }}) %>
</div>
<script src="js/index.js"></script>
<script src="js/to-do.js"></script>
</body>
</html>